{
  "name": "git-pager",
  "version": "0.6.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "markdown-ime": "^1.0.3",
    "marked": "^0.7.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "turndown": "^5.0.3",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "format": "prettier --write \"{,!(node_modules|.git|build)/**/}*.{html,md,css,less,js,json,jsx}\"",
    "build": "npm run format  &&  react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build  &&  git add ."
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
